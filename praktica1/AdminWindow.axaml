<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="praktica1.AdminWindow"
		x:CompileBindings="False"
        Title="AdminWindow">
	<StackPanel Width="400">
		<StackPanel Height="10"></StackPanel>
		<StackPanel>
			<TextBlock Text="Название"></TextBlock>
		</StackPanel>
		<StackPanel Height="5"></StackPanel>
		<StackPanel>
			<TextBox x:Name="ProductName"></TextBox>
		</StackPanel>
		<StackPanel Height="5"></StackPanel>
		<TextBlock Text="Цена"></TextBlock>
		<StackPanel Height="5"></StackPanel>
		<StackPanel>
			<TextBox x:Name="ProductCost"></TextBox>
		</StackPanel>
		<StackPanel Height="5"></StackPanel>
		<StackPanel>
		<TextBlock Text="Описание"></TextBlock>
		</StackPanel>
		<StackPanel Height="5"></StackPanel>
		<StackPanel>
			<TextBox x:Name="ProductCaption"></TextBox>
		</StackPanel>
		<StackPanel Height="5"></StackPanel>
		<Button Height="35" Width="200" Click="Product_Add" Content="Добавление товара"></Button>
		
		<Button Height="35" Width="200" Content="Выбор фото"
				Margin="10"
				Click="Button_Click"></Button>

		<Image Margin="10"
			   Height="150"
			   Width="150"
			   Name="MainImage">
			
		</Image>
	</StackPanel>
</Window>
